        {
          "name": "Get Event Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_url}}/events/1",
              "host": ["{{api_url}}"],
              "path": ["events", "1"]
            },
            "description": "Get detailed information about a specific event"
          }
        },
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": {\"ru\": \"Новое событие\", \"en\": \"New Event\"},\n  \"description\": {\"ru\": \"Описание события\", \"en\": \"Event description\"},\n  \"type\": \"ПАНЕЛЬНАЯ ДИСКУССИЯ\",\n  \"start_date\": \"2025-09-22 09:00:00\",\n  \"end_date\": \"2025-09-22 10:30:00\",\n  \"location\": {\"ru\": \"Конгресс-центр\", \"en\": \"Congress Center\"},\n  \"venue\": {\"ru\": \"Зал А\", \"en\": \"Hall A\"},\n  \"tags\": [\"culture\", \"education\"],\n  \"goals\": [\"Goal 1\", \"Goal 2\"],\n  \"format\": {\"ru\": \"Формат события\", \"en\": \"Event format\"},\n  \"discussion_questions\": [\"Question 1\", \"Question 2\"],\n  \"download_link\": \"https://example.com/doc.pdf\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/events",
              "host": ["{{api_url}}"],
              "path": ["events"]
            },
            "description": "Create a new event (requires authentication)"
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": {\"ru\": \"Обновленное событие\", \"en\": \"Updated Event\"},\n  \"description\": {\"ru\": \"Обновленное описание\", \"en\": \"Updated description\"}\n}"
            },
            "url": {
              "raw": "{{api_url}}/events/1",
              "host": ["{{api_url}}"],
              "path": ["events", "1"]
            },
            "description": "Update an existing event (requires authentication)"
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/events/1",
              "host": ["{{api_url}}"],
              "path": ["events", "1"]
            },
            "description": "Delete an event (requires authentication)"
          }
        }
      ]
